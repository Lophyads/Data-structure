namespace ST{
	VII st;
	void build_st(VI& a){
		int n = a.size();
		int m = log(n) / log(2) + 1;
		st = VII(n, VI(m));
		for(int i = 0; i < n; i ++) st[i][0] = a[i];
		for(int j = 1; j < m; j ++){
			for(int i = 0; i + (1 << (j - 1)) < n; i ++)
				st[i][j] = max(st[i][j - 1], st[i + (1 << (j - 1))][j - 1]);
		}
	}
	int query(int l, int r){
		int k = log(r - l + 1) / log(2);
		return max(st[l][k], st[r - (1 << k) + 1][k]);
	}
}